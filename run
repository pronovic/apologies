#!/bin/bash
# vim: set ft=bash ts=3 sw=3:
# Shortcuts for common developer tasks

unset CDPATH

REPO_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)
DOTRUN_DIR="$REPO_DIR/.run"

source "$DOTRUN_DIR/util.sh"
run_command disablekeyring

if task_exists "$1"; then
   run_task $*
else
   echo ""
   echo "------------------------------------"
   echo "Shortcuts for common developer tasks"
   echo "------------------------------------"
   echo ""
   echo "Basic tasks:"
   echo ""
   for task in $(basic_tasks); do
      task_help "$task"
   done
   echo ""
   echo "Additional tasks:"
   echo ""
   for task in $(all_tasks); do
      task_help "$task"
   done
   echo ""
   exit 2
fi

